{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Glasgow",
	"version": 2,
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": ["#f24139", "#ffdda6"],
					"slug": "foreground-and-background",
					"name": "Foreground and background"
				}
			],
			"palette": [
				{
					"slug": "foreground",
					"color": "#000",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#C3BEB2",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#553620",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#edeae9",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#e8dec5",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"elements": {
				"button": {
					"border": {
						"color": "var(--wp--preset--color--primary)",
						"radius": {
							"bottomLeft": "8px",
							"bottomRight": "8px",
							"topLeft": "8px",
							"topRight": "8px"
						},
						"width": "2px !important"
					},
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--secondary)"
					},
					"spacing": {
						"padding": {
							"top": "clamp(1.1rem, 1.5vw, 1.3rem)",
							"bottom": "clamp(1.1rem, 1.5vw, 1.3rem)",
							"right": "clamp(1.5rem, 2.5vw, 2rem)",
							"left": "clamp(1.5rem, 2.5vw, 2rem)"
						}
					}
				}
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Rubik\", sans-serif",
					"name": "Body (Rubik)",
					"slug": "body",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Rubik",
							"fontWeight": "300 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": ["file:./assets/fonts/Rubik/Rubik-VariableFont_wght.woff2"]
						}
					]
				},
				{
					"fontFamily": "\"Rubik\", sans-serif",
					"name": "Headings (Rubik)",
					"slug": "heading"
				}
			]
		},
		"layout": {
			"contentSize": "700px",
			"wideSize": "74rem"
		}
	},
	"styles": {
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "(--wp--custom--typography--font-weight--semi-bold)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "var(--wp--custom--typography--font-weight--light)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"width": "2px 0"
				}
			},
			"core/query-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--light)"
				}
			},
			"core/quote": {
				"border": {
					"width": "0 0 0 2px"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "clamp(1.2rem, 3vw, 1.5rem)",
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)",
					"letterSpacing": "-.025em"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--light)",
					"letterSpacing": "0"
				}
			},
			"h2": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)"
				}
			},
			"h3": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)"
				}
			},
			"h4": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--extra-bold)"
				}
			},
			"h5": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--black)"
				}
			},
			"h6": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--extra-bold)",
					"letterSpacing": "0.02em"
				}
			}
		}
	}
}
