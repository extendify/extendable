{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Kampala",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "foreground",
					"color": "#000",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#f5f5f5",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#314cb6",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#fff",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#ebebeb",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"elements": {
				"button": {
					"border": {
						"color": "var(--wp--preset--color--primary)",
						"radius": {
							"bottomLeft": "4px",
							"bottomRight": "4px",
							"topLeft": "4px",
							"topRight": "4px"
						},
						"width": "2px !important"
					},
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--secondary)"
					},
					"spacing": {
						"padding": {
							"top": "clamp(1.1rem, 1.5vw, 1.3rem)",
							"bottom": "clamp(1.1rem, 1.5vw, 1.3rem)",
							"right": "clamp(1.5rem, 2.5vw, 2rem)",
							"left": "clamp(1.5rem, 2.5vw, 2rem)"
						}
					},
					"typography": {
						"letterSpacing": "0.03em"
					}
				}
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Hind\", sans-serif",
					"name": "Body (Hind)",
					"slug": "body",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Hind",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": ["file:./assets/fonts/Hind/Hind-Variable.woff2"]
						}
					]
				},
				{
					"fontFamily": "\"Hind\", sans-serif",
					"name": "Headings (Hind)",
					"slug": "heading"
				}
			]
		},
		"layout": {
			"contentSize": "680px",
			"wideSize": "76rem"
		}
	},
	"styles": {
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--black)"
				}
			},
			"core/pullquote": {
				"border": {
					"width": "2px 0"
				}
			},
			"core/query-title": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--black)"
				}
			},
			"core/quote": {
				"border": {
					"width": "0 0 0 2px"
				}
			},
			"core/separator": {
				"color": {
					"text": "var(--wp--preset--color--tertiary)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)",
					"letterSpacing": "0.02em"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"letterSpacing": "-0.01em"
				}
			},
			"h6": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--bold)"
				}
			}
		},
		"spacing": {
			"blockGap": "2.2rem"
		}
	}
}
