{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Odesa",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": ["page", "post"]
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"customDuotone": false,
			"duotone": [
				{
					"colors": [
						"#111111",
						"#ffffff"
					],
					"slug": "foreground-and-background",
					"name": "Foreground and background"
				},
				{
					"colors": [
						"#ffffff",
						"#063483"
					],
					"slug": "background-and-primary",
					"name": "Background and primary"
				},
				{
					"colors": [
						"#ffffff",
						"#F8D648"
					],
					"slug": "background-and-secondary",
					"name": "Background and secondary"
				},
				{
					"colors": [
						"#063483",
						"#F8D648"
					],
					"slug": "primary-and-secondary",
					"name": "Primary and secondary"
				}
			],
			"palette": [
				{
					"slug": "foreground",
					"color": "#111111",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#063483",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#F8D648",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#f2f2f3",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"spacing": {
				"outer": "var(--wp--style--block-gap, 1.25rem)"
			},
			"typography": {
				"font-size": {
					"headingOne": "clamp(4.4rem, 8vw, 5rem)",
					"headingTwo": "clamp(3.8rem, 6vw, 4.8rem)",
					"headingThree": "clamp(2.8rem, 4vw, 3.9rem)",
					"headingFour": "clamp(2.3rem, 4vw, 3.2rem)",
					"headingFive": "clamp(2rem, 4vw, 2.7rem)",
					"headingSix": "clamp(1.8rem, 4vw, 2.2rem)"
				},
				"font-weight": {
					"black": "900",
					"extraBold": "800",
					"bold": "700",
					"semiBold": "600",
					"medium": "500",
					"regular": "400",
					"light": "300",
					"extraLight": "200",
					"thin": "100"
				},
				"line-height": {
					"tiny": 1.1,
					"small": 1.25,
					"medium": 1.4
				}
			}
		},
		"layout": {
			"contentSize": "38em",
			"wideSize": "64em"
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "\"Inter\", sans-serif",
					"name": "Body (System Font)",
					"slug": "body-font",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Inter",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": ["file:./assets/fonts/Inter/Inter-VariableFont_slnt,wght.woff2"]
						}
					]
				},
				{
					"fontFamily": "\"Roboto Flex\", sans-serif",
					"name": "Headings (System Font)",
					"slug": "heading-font",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Roboto Flex",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/RobotoFlex/RobotoFlex-VariableFont_GRAD,XTRA,YOPQ,YTAS,YTDE,YTFI,YTLC,YTUC,opsz,slnt,wdth,wght.woff2"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "0.95rem",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "clamp(1.07rem, 2vw, 1.18rem)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(1.18rem, 2vw, 1.4rem)",
					"slug": "large"
				},
				{
					"name": "X-large",
					"size": "clamp(1.8rem, 2vw, 3rem)",
					"slug": "x-large"
				},
				{
					"name": "h1",
					"size": "var(--wp--custom--typography--font-size--heading-one)",
					"slug": "headingone"
				},
				{
					"name": "h2",
					"size": "var(--wp--custom--typography--font-size--heading-two)",
					"slug": "headingtwo"
				},
				{
					"name": "h3",
					"size": "var(--wp--custom--typography--font-size--heading-three)",
					"slug": "headingthree"
				},
				{
					"name": "h4",
					"size": "var(--wp--custom--typography--font-size--heading-four)",
					"slug": "headingfour"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "4px",
					"width": "1px !important"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--background)"
				},
				"spacing": {
					"padding": {
						"top": "clamp(0.7rem, 1.5vw, 0.9rem)",
						"bottom": "clamp(0.6rem, 1.5vw, 0.8rem)",
						"right": "clamp(1.4rem, 2.5vw, 1.8rem)",
						"left": "clamp(1.4rem, 2.5vw, 1.8rem)"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
					"letterSpacing": "0.03em",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"letterSpacing": "0.01em"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-four)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "double none double none",
					"width": "7px"
				},
				"typography": {
					"fontSize": "var(--wp--custom--typography--font-size--large)"
				}
			},
			"core/query-pagination-next": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
					"textTransform": "uppercase"
				}
			},
			"core/query-pagination-numbers": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)"
				}
			},
			"core/query-pagination-previous": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
					"textTransform": "uppercase"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "none none none double",
					"width": "5px"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--extra-light)",
					"letterSpacing": "0.02em",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-one)",
					"fontWeight": "var(--wp--custom--typography--font-weight--extra-light)",
					"letterSpacing": "0.01em",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-two)",
					"fontWeight": "var(--wp--custom--typography--font-weight--light)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-three)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-four)",
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)",
					"letterSpacing": "0.01em",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-five)",
					"fontWeight": "var(--wp--custom--typography--font-weight--bold)",
					"letterSpacing": "0.01em",
					"textTransform": "normal"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"fontSize": "var(--wp--custom--typography--font-size--heading-six)",
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)",
					"letterSpacing": "0.03em",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"textTransform": "uppercase"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"spacing": {
			"blockGap": "min(32px, 7vw)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body-font)",
			"lineHeight": "var(--wp--custom--typography--line-height--medium)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontWeight": "var(--wp--custom--typography--font-weight--regular)"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
