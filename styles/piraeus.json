{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Piraeus",
	"version": 2,
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": ["#f4f3f0", "#383838"],
					"slug": "foreground-and-background",
					"name": "Foreground and background"
				},
				{
					"colors": ["#383838", "#0d0c0c"],
					"slug": "background-and-primary",
					"name": "Background and primary"
				},
				{
					"colors": ["#383838", "#f0ede6"],
					"slug": "background-and-secondary",
					"name": "Background and secondary"
				},
				{
					"colors": ["#0d0c0c", "#f0ede6"],
					"slug": "primary-and-secondary",
					"name": "Primary and secondary"
				}
			],
			"palette": [
				{
					"slug": "foreground",
					"color": "#f4f3f0",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#383838",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#0d0c0c",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#f0ede6",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#474646",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"elements": {
				"button": {
					"border": {
						"color": "var(--wp--preset--color--primary)",
						"radius": {
							"bottomLeft": "0px",
							"bottomRight": "0px",
							"topLeft": "0px",
							"topRight": "0px"
						},
						"width": "2px !important"
					},
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--secondary)"
					},
					"spacing": {
						"padding": {
							"top": "1.2rem",
							"bottom": "1rem",
							"right": "1.9rem",
							"left": "1.9rem"
						}
					},
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--heading)",
						"fontWeight": "var(--wp--custom--typography--font-weight--medium)",
						"letterSpacing": "0.02em",
						"textTransform": "uppercase"
					}
				}
			},
			"typography": {
				"fontSmoothing": {
					"moz": "auto",
					"webkit": "auto"
				}
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Roboto Flex\", sans-serif",
					"name": "Body (Roboto Flex)",
					"slug": "body",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Roboto Flex",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/RobotoFlex/RobotoFlex-VariableFont_GRAD,XTRA,YOPQ,YTAS,YTDE,YTFI,YTLC,YTUC,opsz,slnt,wdth,wght.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "\"Geom\", sans-serif",
					"name": "Headings (Geom)",
					"slug": "heading",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Geom",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 900",
							"src": ["file:./assets/fonts/Geom/Geom-Variable.woff2"]
						}
					]
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "(--wp--custom--typography--font-weight--semi-bold)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"width": "6px 0"
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"core/quote": {
				"border": {
					"width": "0 0 0 6px"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--light)",
					"letterSpacing": "0.03em"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--light)",
					"letterSpacing": "-0.02em"
				}
			},
			"h2": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--light)"
				}
			},
			"h3": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--light)",
					"letterSpacing": "0.04em"
				}
			},
			"h4": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)",
					"letterSpacing": "0.01em",
					"textTransform": "normal"
				}
			},
			"h6": {
				"typography": {
					"fontWeight": "var(--wp--custom--typography--font-weight--semi-bold)"
				}
			}
		},
		"spacing": {
			"blockGap": "min(48px, 6vw)"
		}
	}
}
